nav
  ul
    display table
    width 100%
    table-layout fixed
    border 1px solid base-color-border

    li
      display table-cell
      border-left 1px solid base-color-border
      text-align center

      &:first-child
        border-left none

      a
        display block
        padding 15px 5px
        text-decoration none
        color base-color-font

        &:hover
          background base-color-bg-dark
          color #FFF

      span
        display block
        padding 15px 5px
        background base-color-bg-dark
        color #FFF
